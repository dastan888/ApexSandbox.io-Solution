public void createCourseAndClass(String name, String description) {
    // code here
    apxio__Course__c course = new apxio__Course__c(
        Name = name,
        apxio__Course_Details__c = description ? description : null
    );
    insert course;
    apxio__Class__c class1 = new apxio__Class__c(
        Name = name,
        apxio__Course__c = course.Id,
        apxio__Description__c = description ? description.left(255) : null
    );
    insert class1;
}